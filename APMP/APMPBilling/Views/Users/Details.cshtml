@model ApplicationUserViewModel

@{
    ViewBag.Title = "APMP - Détails";
}

<br/>
<h2>@Model.User.FirstName @Model.User.LastName</h2>
<br />

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.PhoneNb)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.PhoneNb)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.State)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.PostalCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.PostalCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.SkillLevel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.SkillLevel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.EmailConfirmed)
        </dt>

        <dd>
            @if (Model.User.EmailConfirmed)
            {
                @: Courriel confirmé
            }
            else
            {
                @: Courriel non confirmé
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </dt>

        <dd>
            @if (Model.IsAdmin)
            { 
                @: Administrateur
            }
            else
            { 
                @: Utilisateur 
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.User.Id }) |
    @Html.ActionLink("Supprimer", "Delete", new { id = Model.User.Id }) |
    @Html.ActionLink("Retour à la liste", "Index")
</p>
