@model EquipmentModel

@{
    ViewBag.Title = "APMP - Supprimer";
}

<br/>
<h2>Supprimer un équipement</h2>
<br/>
<h3>Etes-vous sûr de vouloir supprimer cet équipement?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EquipmentType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EquipmentType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdditionalInfo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdditionalInfo)
